<div class="min-h-screen bg-gradient-to-br from-blue-600 to-indigo-700 py-12">
  <div class="max-w-2xl mx-auto px-4">
    <div class="bg-white/10 backdrop-blur-lg rounded-2xl p-8">
      <h1 class="text-3xl font-bold text-white mb-8">Editar Projeto</h1>

      <%= form_with(model: @project, class: "space-y-6") do |f| %>
        <% if @project.errors.any? %>
          <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
            <div class="flex">
              <div class="flex-shrink-0">
                <i class="fas fa-exclamation-circle text-red-500"></i>
              </div>
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  Foram encontrados <%= @project.errors.count %> erro(s):
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul class="list-disc pl-5 space-y-1">
                    <% @project.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <div>
          <%= f.label :title, "Título", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.text_field :title, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md bg-white/10 backdrop-blur-sm text-white" %>
          </div>
        </div>

        <div>
          <%= f.label :description, "Descrição", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.text_area :description, rows: 4, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md bg-white/10 backdrop-blur-sm text-white" %>
          </div>
        </div>

        <div>
          <%= f.label :technologies, "Tecnologias (separadas por vírgula)", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.text_field :technologies, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md bg-white/10 backdrop-blur-sm text-white" %>
          </div>
        </div>

        <div>
          <%= f.label :github_link, "Link do GitHub", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.url_field :github_link, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md bg-white/10 backdrop-blur-sm text-white" %>
          </div>
        </div>

        <div>
          <%= f.label :deploy_link, "Link do Deploy", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <%= f.url_field :deploy_link, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md bg-white/10 backdrop-blur-sm text-white" %>
          </div>
        </div>

        <div>
          <%= f.label :image, "Imagem do Projeto", class: "block text-sm font-medium text-white" %>
          <div class="mt-1">
            <% if @project.image.attached? %>
              <div class="mb-4">
                <%= image_tag @project.image, class: "w-48 h-32 object-cover rounded-lg" %>
              </div>
            <% end %>
            <%= f.file_field :image, 
                accept: "image/jpeg,image/png",
                class: "block w-full text-sm text-white file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-white/10 file:text-white hover:file:bg-white/20" %>
            <p class="mt-2 text-sm text-white/70">
              PNG ou JPEG (máx. 5MB)
            </p>
          </div>
        </div>

        <div class="flex justify-end space-x-4 pt-6">
          <%= link_to "Cancelar", projects_path, class: "inline-flex justify-center py-2 px-4 border border-white/30 rounded-md shadow-sm text-sm font-medium text-white hover:bg-white/10 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          <%= f.submit "Atualizar Projeto", class: "inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 
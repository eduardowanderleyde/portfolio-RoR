<div class="min-h-screen bg-gradient-to-br from-blue-600 to-indigo-700 relative overflow-hidden">
  <!-- Navbar -->
  <nav class="container mx-auto px-6 py-6">
    <div class="flex justify-between items-center">
      <%= link_to root_path, class: "text-white text-2xl font-bold hover:text-white/90" do %>
        DevMan
      <% end %>
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to "Home", root_path, class: "text-white/90 hover:text-white" %>
        <%= link_to "About Me", about_path, class: "text-white/90 hover:text-white" %>
        <%= link_to "Portfolio", projects_path, class: "text-white/90 hover:text-white" %>
        <%= link_to "Contact", contact_path, class: "text-white/90 hover:text-white" %>
        <%= link_to "Download CV", "#", class: "bg-red-500 text-white px-6 py-2 rounded-full hover:bg-red-600 transition-all" %>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container mx-auto px-6 py-20">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Entre em Contato</h1>
        <p class="text-xl text-white/80">Vamos conversar sobre seu pr√≥ximo projeto!</p>
      </div>

      <div class="bg-white/10 backdrop-blur-lg rounded-3xl p-8">
        <%= form_with(model: @contact_message, url: contact_messages_path, local: true, class: "space-y-6") do |f| %>
          <% if @contact_message.errors.any? %>
            <div class="bg-red-50 border-l-4 border-red-500 p-4 mb-6">
              <div class="flex">
                <div class="flex-shrink-0">
                  <i class="fas fa-exclamation-circle text-red-500"></i>
                </div>
                <div class="ml-3">
                  <h3 class="text-sm font-medium text-red-800">
                    Foram encontrados <%= @contact_message.errors.count %> erro(s):
                  </h3>
                  <div class="mt-2 text-sm text-red-700">
                    <ul class="list-disc pl-5 space-y-1">
                      <% @contact_message.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                      <% end %>
                    </ul>
                  </div>
                </div>
              </div>
            </div>
          <% end %>

          <div>
            <%= f.label :name, "Nome", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_field :name, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div>
            <%= f.label :email, "E-mail", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.email_field :email, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div>
            <%= f.label :message, "Mensagem", class: "block text-sm font-medium text-gray-700" %>
            <div class="mt-1">
              <%= f.text_area :message, rows: 4, class: "shadow-sm focus:ring-blue-500 focus:border-blue-500 block w-full sm:text-sm border-gray-300 rounded-md" %>
            </div>
          </div>

          <div class="flex justify-end">
            <%= f.submit "Enviar Mensagem", class: "inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
          </div>
        <% end %>

        <!-- Contact Info -->
        <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2">
          <div class="flex items-center">
            <div class="flex-shrink-0">
              <i class="fas fa-envelope text-2xl text-blue-600"></i>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-medium text-gray-900">E-mail</h4>
              <p class="mt-1 text-gray-500">
                <%= mail_to "seu-email@exemplo.com", "seu-email@exemplo.com", class: "hover:text-blue-600" %>
              </p>
            </div>
          </div>

          <div class="flex items-center">
            <div class="flex-shrink-0">
              <i class="fab fa-linkedin text-2xl text-blue-600"></i>
            </div>
            <div class="ml-4">
              <h4 class="text-lg font-medium text-gray-900">LinkedIn</h4>
              <p class="mt-1 text-gray-500">
                <%= link_to "Perfil no LinkedIn", "https://linkedin.com/in/seu-perfil", target: "_blank", class: "hover:text-blue-600" %>
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </main>

  <!-- Background Blur Elements -->
  <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-blue-500/30 rounded-full filter blur-[120px]"></div>
  <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-indigo-500/30 rounded-full filter blur-[120px]"></div>
</div>

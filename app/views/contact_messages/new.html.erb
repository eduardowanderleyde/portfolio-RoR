<div class="min-h-screen bg-gradient-to-br from-blue-600 to-indigo-700 relative overflow-hidden">
  <!-- Navbar -->
  <nav class="container mx-auto px-6 py-6">
    <div class="flex justify-between items-center">
      <%= link_to root_path, class: "text-white text-2xl font-bold hover:text-white/90" do %>
        DevMan
      <% end %>
      <div class="hidden md:flex items-center space-x-8">
        <%= link_to "Home", root_path, class: "text-white/90 hover:text-white" %>
        <%= link_to "About Me", about_path, class: "text-white/90 hover:text-white" %>
        <%= link_to "Portfolio", projects_path, class: "text-white/90 hover:text-white" %>
        <%= link_to "Contact", contact_path, class: "text-white/90 hover:text-white" %>
        <%= link_to "Download CV", "#", class: "bg-red-500 text-white px-6 py-2 rounded-full hover:bg-red-600 transition-all" %>
      </div>
    </div>
  </nav>

  <!-- Main Content -->
  <main class="container mx-auto px-6 py-20">
    <div class="max-w-2xl mx-auto">
      <div class="text-center mb-16">
        <h1 class="text-4xl md:text-5xl font-bold text-white mb-6">Entre em Contato</h1>
        <p class="text-xl text-white/80">Vamos conversar sobre seu pr√≥ximo projeto!</p>
      </div>

      <div class="bg-white/10 backdrop-blur-lg rounded-3xl p-8">
        <%= form_with(model: @contact_message, url: contact_messages_path, local: true, class: "space-y-6") do |f| %>
          <% if @contact_message.errors.any? %>
            <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded relative" role="alert">
              <ul>
                <% @contact_message.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div>
            <%= f.label :name, "Nome", class: "block text-white font-medium mb-2" %>
            <%= f.text_field :name, class: "w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Seu nome" %>
          </div>

          <div>
            <%= f.label :email, "E-mail", class: "block text-white font-medium mb-2" %>
            <%= f.email_field :email, class: "w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "seu.email@exemplo.com" %>
          </div>

          <div>
            <%= f.label :subject, "Assunto", class: "block text-white font-medium mb-2" %>
            <%= f.text_field :subject, class: "w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Assunto da mensagem" %>
          </div>

          <div>
            <%= f.label :message, "Mensagem", class: "block text-white font-medium mb-2" %>
            <%= f.text_area :message, rows: 5, class: "w-full px-4 py-3 rounded-lg bg-white/5 border border-white/10 text-white placeholder-white/50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent", placeholder: "Digite sua mensagem aqui..." %>
          </div>

          <div class="text-center">
            <%= f.submit "Enviar Mensagem", class: "inline-block bg-blue-600 text-white px-8 py-4 rounded-lg font-semibold text-lg hover:bg-blue-700 transition cursor-pointer" %>
          </div>
        <% end %>
      </div>
    </div>
  </main>

  <!-- Background Blur Elements -->
  <div class="absolute top-0 right-0 w-1/2 h-1/2 bg-blue-500/30 rounded-full filter blur-[120px]"></div>
  <div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-indigo-500/30 rounded-full filter blur-[120px]"></div>
</div>

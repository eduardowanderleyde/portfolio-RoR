<!-- Hero Section -->
<section class="hero-section">
  <!-- Background Elements -->
  <div class="hero-background">
    <div class="hero-background-blur hero-background-blur-top"></div>
    <div class="hero-background-blur hero-background-blur-bottom"></div>
  </div>

  <!-- Main Content -->
  <div class="hero-content">
    <!-- Location Badge -->
    <div class="hero-location-badge">
      <i class="far fa-map-marker-alt mr-2 text-teal-400"></i>
      <span class="text-white/90">Desenvolvedor Full Stack • São Paulo, Brasil</span>
    </div>

    <!-- Main Title -->
    <h1 class="hero-title">Eduardo Wanderley</h1>
    <p class="hero-subtitle">
      Transformando ideias em soluções web elegantes e eficientes
    </p>

    <!-- Profile Image -->
    <div class="hero-profile-container">
      <div class="hero-profile-border"></div>
      <%= image_tag "profile.jpeg", class: "hero-profile-image", alt: "Eduardo Wanderley" %>
    </div>

    <!-- CTA Buttons -->
    <div class="flex flex-col sm:flex-row justify-center gap-4 sm:gap-6 w-full max-w-md mx-auto">
      <%= link_to projects_path, class: "btn-primary group" do %>
        <span>Ver Projetos</span>
        <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
      <% end %>

      <%= link_to contact_path, class: "btn-secondary group" do %>
        <span>Entre em Contato</span>
        <i class="fas fa-envelope ml-2 transform group-hover:scale-110 transition-transform"></i>
      <% end %>
    </div>
  </div>
</section>

<!-- Technologies Section -->
<section class="tech-section">
  <div class="tech-background"></div>
  <div class="tech-container">
    <h2 class="tech-title">Tecnologias</h2>
    <p class="tech-description">
      Especializado em desenvolvimento web moderno com foco em Ruby on Rails
    </p>
    
    <div class="tech-grid">
      <!-- Ruby on Rails -->
      <div class="tech-card group">
        <div class="tech-icon-container tech-ruby">
          <i class="fas fa-gem tech-icon"></i>
        </div>
        <h3 class="tech-name">Ruby on Rails</h3>
        <p class="tech-card-description">Backend robusto e ágil</p>
      </div>

      <!-- JavaScript -->
      <div class="tech-card group">
        <div class="tech-icon-container tech-js">
          <i class="fab fa-js tech-icon"></i>
        </div>
        <h3 class="tech-name">JavaScript</h3>
        <p class="tech-card-description">Interatividade moderna</p>
      </div>

      <!-- HTML5 -->
      <div class="tech-card group">
        <div class="tech-icon-container tech-html">
          <i class="fab fa-html5 tech-icon"></i>
        </div>
        <h3 class="tech-name">HTML5</h3>
        <p class="tech-card-description">Estrutura semântica</p>
      </div>

      <!-- CSS3 -->
      <div class="tech-card group">
        <div class="tech-icon-container tech-css">
          <i class="fab fa-css3-alt tech-icon"></i>
        </div>
        <h3 class="tech-name">CSS3</h3>
        <p class="tech-card-description">Estilização moderna</p>
      </div>
    </div>
  </div>
</section>

<!-- Projects Section -->
<section class="projects-section">
  <div class="container mx-auto px-4">
    <h2 class="projects-title">Projetos em Destaque</h2>
    <p class="projects-description">
      Conheça alguns dos projetos que desenvolvi
    </p>
    
    <div class="projects-grid">
      <% @projects.limit(3).each do |project| %>
        <div class="project-card group">
          <% if project.image.attached? %>
            <div class="project-image-container">
              <%= image_tag project.image, class: "project-image" %>
            </div>
          <% end %>
          
          <div class="project-content">
            <h3 class="project-title"><%= project.title %></h3>
            <p class="project-description"><%= truncate(project.description, length: 120) %></p>
            
            <div class="project-tech-tags">
              <% project.technologies.split(',').each do |tech| %>
                <span class="project-tech-tag">
                  <%= tech.strip %>
                </span>
              <% end %>
            </div>
            
            <div class="project-links">
              <div class="project-social-links">
                <%= link_to project.github_link, target: "_blank", class: "project-github-link group" do %>
                  <i class="fab fa-github text-xl transform group-hover:scale-110 transition-transform"></i>
                <% end %>
                
                <%= link_to project.deploy_link, target: "_blank", class: "project-deploy-link group" do %>
                  <i class="fas fa-external-link-alt text-lg transform group-hover:rotate-12 transition-transform"></i>
                <% end %>
              </div>
              
              <%= link_to project_path(project), class: "project-details-link group" do %>
                Ver Detalhes
                <i class="fas fa-arrow-right ml-1 transform group-hover:translate-x-1 transition-transform"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="projects-cta">
      <%= link_to projects_path, class: "projects-cta-button group" do %>
        <span>Ver Todos os Projetos</span>
        <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
      <% end %>
    </div>
  </div>
</section>

<!-- Contact Section -->
<section class="contact-section">
  <div class="container mx-auto px-4 text-center">
    <h2 class="contact-title">Vamos Trabalhar Juntos?</h2>
    <p class="contact-description">
      Estou sempre aberto a novos projetos e oportunidades interessantes. 
      Se você tem um projeto em mente, vamos conversar!
    </p>
    <%= link_to contact_path, class: "contact-button group" do %>
      <span>Entre em Contato</span>
      <i class="fas fa-arrow-right ml-2 transform group-hover:translate-x-1 transition-transform"></i>
    <% end %>
  </div>
</section> 
<div class="container mx-auto px-4 py-8">
  <div class="text-center mb-12">
    <h1 class="text-4xl font-bold mb-4">Eduardo Wanderley</h1>
    <p class="text-xl text-gray-600">Desenvolvedor Ruby on Rails</p>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <% @projects.each do |project| %>
      <div class="bg-white rounded-lg shadow-md overflow-hidden">
        <% if project.image.attached? %>
          <%= image_tag project.image, class: "w-full h-48 object-cover" %>
        <% end %>
        <div class="p-6">
          <h2 class="text-xl font-semibold mb-2"><%= project.title %></h2>
          <p class="text-gray-600 mb-4"><%= project.description %></p>
          <div class="flex flex-wrap gap-2 mb-4">
            <% project.technologies.split(',').each do |tech| %>
              <span class="bg-gray-100 text-gray-800 px-3 py-1 rounded-full text-sm">
                <%= tech.strip %>
              </span>
            <% end %>
          </div>
          <div class="flex justify-between">
            <a href="<%= project.github_link %>" target="_blank" class="text-blue-600 hover:text-blue-800">
              GitHub
            </a>
            <a href="<%= project.deploy_link %>" target="_blank" class="text-blue-600 hover:text-blue-800">
              Deploy
            </a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div> 
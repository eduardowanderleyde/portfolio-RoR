<!-- Projects Section -->
<section id="projects" class="py-20 bg-white/5 backdrop-blur-lg">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl lg:text-4xl font-bold text-white text-center mb-12">Projetos em Destaque</h2>
    <p class="text-xl text-white/80 text-center mb-12">
      ConheÃ§a alguns dos projetos que desenvolvi
    </p>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @projects.limit(3).each do |project| %>
        <div class="bg-white/10 backdrop-blur-sm rounded-xl overflow-hidden hover:bg-white/20 transition">
          <% if project.image.attached? %>
            <div class="aspect-video overflow-hidden">
              <%= image_tag project.image, class: "w-full h-full object-cover" %>
            </div>
          <% end %>
          
          <div class="p-6">
            <h3 class="text-xl font-semibold text-white mb-3"><%= project.title %></h3>
            <p class="text-white/70 mb-4"><%= truncate(project.description, length: 120) %></p>
            
            <div class="flex flex-wrap gap-2 mb-4">
              <% project.technologies.split(',').each do |tech| %>
                <span class="px-3 py-1 bg-white/10 rounded-full text-sm text-white/90">
                  <%= tech.strip %>
                </span>
              <% end %>
            </div>
            
            <div class="flex items-center justify-between">
              <div class="flex gap-4">
                <%= link_to project.github_link, target: "_blank", class: "text-white/80 hover:text-white transition" do %>
                  <i class="fab fa-github text-xl"></i>
                <% end %>
                
                <%= link_to project.deploy_link, target: "_blank", class: "text-white/80 hover:text-white transition" do %>
                  <i class="fas fa-external-link-alt text-lg"></i>
                <% end %>
              </div>
              
              <%= link_to project_path(project), class: "text-white/90 hover:text-white flex items-center gap-2 transition" do %>
                Ver Detalhes
                <i class="fas fa-arrow-right"></i>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <div class="text-center mt-12">
      <%= link_to projects_path, class: "inline-flex items-center px-6 py-3 bg-white/10 hover:bg-white/20 rounded-full text-white transition" do %>
        <span>Ver Todos os Projetos</span>
        <i class="fas fa-arrow-right ml-2"></i>
      <% end %>
    </div>
  </div>
</section>


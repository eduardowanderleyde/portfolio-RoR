<!-- Featured Projects Section -->
<div class="py-16">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12">Projetos em Destaque</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      <% @projects.limit(3).each do |project| %>
        <div class="bg-white rounded-lg shadow-lg overflow-hidden">
          <% if project.image.attached? %>
            <%= image_tag project.image, class: "w-full h-48 object-cover" %>
          <% end %>
          <div class="p-6">
            <h3 class="text-xl font-semibold mb-2"><%= project.title %></h3>
            <p class="text-gray-600 mb-4"><%= project.description %></p>
            <div class="flex flex-wrap gap-2 mb-4">
              <% project.technologies.split(',').each do |tech| %>
                <span class="bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm">
                  <%= tech.strip %>
                </span>
              <% end %>
            </div>
            <div class="flex justify-between">
              <%= link_to "GitHub", project.github_link, target: "_blank", class: "text-blue-600 hover:text-blue-800" %>
              <%= link_to "Demo", project.deploy_link, target: "_blank", class: "text-blue-600 hover:text-blue-800" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="text-center mt-8">
      <%= link_to "Ver Todos os Projetos", projects_path, class: "inline-block bg-blue-600 text-white px-6 py-3 rounded-lg font-semibold hover:bg-blue-700 transition" %>
    </div>
  </div>
</div>


<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2>Nova Experiência</h2>
        </div>
        <div class="card-body">
          <%= form_with(model: @experience, local: true) do |form| %>
            <% if @experience.errors.any? %>
              <div class="alert alert-danger">
                <h4><%= pluralize(@experience.errors.count, "erro") %> impediram esta experiência de ser salva:</h4>
                <ul>
                  <% @experience.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            <% end %>

            <div class="mb-3">
              <%= form.label :title, "Título", class: "form-label" %>
              <%= form.text_field :title, class: "form-control" %>
            </div>

            <div class="mb-3">
              <%= form.label :company, "Empresa", class: "form-label" %>
              <%= form.text_field :company, class: "form-control" %>
            </div>

            <div class="row mb-3">
              <div class="col-md-6">
                <%= form.label :start_date, "Data de Início", class: "form-label" %>
                <%= form.date_field :start_date, class: "form-control" %>
              </div>
              <div class="col-md-6">
                <%= form.label :end_date, "Data de Término", class: "form-label" %>
                <%= form.date_field :end_date, class: "form-control" %>
              </div>
            </div>

            <div class="mb-3">
              <%= form.label :description, "Descrição", class: "form-label" %>
              <%= form.text_area :description, class: "form-control", rows: 5 %>
            </div>

            <div class="d-grid gap-2">
              <%= form.submit "Salvar", class: "btn btn-primary" %>
              <%= link_to "Voltar", experiences_path, class: "btn btn-secondary" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div> 
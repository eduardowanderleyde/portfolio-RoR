<div class="container mt-4">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Minhas Experiências</h1>
    <%= link_to 'Nova Experiência', new_experience_path, class: 'btn btn-primary' %>
  </div>

  <% if @experiences.any? %>
    <div class="row">
      <% @experiences.each do |experience| %>
        <div class="col-md-6 mb-4">
          <div class="card">
            <div class="card-body">
              <h5 class="card-title"><%= experience.title %></h5>
              <h6 class="card-subtitle mb-2 text-muted"><%= experience.company %></h6>
              <p class="card-text">
                <small class="text-muted">
                  <%= experience.start_date.strftime("%B %Y") %> - 
                  <%= experience.end_date ? experience.end_date.strftime("%B %Y") : "Presente" %>
                </small>
              </p>
              <p class="card-text"><%= experience.description %></p>
              <div class="btn-group">
                <%= link_to 'Editar', edit_experience_path(experience), class: 'btn btn-outline-primary' %>
                <%= button_to 'Excluir', experience_path(experience), method: :delete, 
                    class: 'btn btn-outline-danger', 
                    data: { confirm: 'Tem certeza que deseja excluir esta experiência?' } %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="alert alert-info">
      Você ainda não tem nenhuma experiência cadastrada.
    </div>
  <% end %>
</div> 